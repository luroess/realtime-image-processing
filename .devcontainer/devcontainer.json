{
  "name": "GHDL Dev Container",
  "image": "ghdl/ghdl:6.0.0-dev-llvm-jit-ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "rjyoung.vscode-modern-vhdl-support",
        "surfer-project.surfer",
        "teros-technology.teroshdl",
        "hbohlin.vhdl-ls"
      ]
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "apt-get update && apt-get install -y ca-certificates && git && gtkwave && ghdl && python3-pip --version"
}